MY_PV="${PV/_rc/-rc}"

DESCRIPTION="Drone CI - Docker Runner"
HOMEPAGE="https://drone.io/ https://github.com/drone-runners/drone-runner-docker"

if [[ ${PV} != 9999* ]] ; then
	SRC_URI="https://github.com/drone-runners/drone-runner-docker/archive/v${MY_PV}.tar.gz -> ${P}.tar.gz
		${EGO_SUM_SRC_URI}"
	S="${WORKDIR}"
else
	EGIT_REPO_URI="https://github.com/drone-runners/drone-runner-docker"
	inherit git-r3
	S="${WORKDIR}/${P}"
fi

KEYWORDS="~amd64"
LICENSE="|| ( PolyForm-Small-Business-1.0.0 PolyForm-Free-Trial-1.0.0 )"
SLOT="0"

RESTRICT="mirror"
RDEPEND="acct-user/drone-runner-docker"

src_compile() {
	pushd "${P}" || die

	go build || die

	popd || die
}

src_install() {
	pushd "${P}" || die

	dosbin drone-runner-docker

	popd || die

	systemd_newunit "${FILESDIR}/${PN}.service-1.6.2" "${PN}.service"

	insinto "/etc/drone-runner-docker"
	newins "${FILESDIR}/app.ini-1.6.2" app.ini

	fowners drone-runner-docker:drone-runner-docker /etc/drone-runner-docker
	fperms 0700 /etc/drone-runner-docker
	fowners drone-runner-docker:drone-runner-docker /etc/drone-runner-docker/app.ini
	fperms 0600 /etc/drone-runner-docker/app.ini
}
